---
interface Props {
  title: string;
  description: string;
  image?: string;
  type?: string;
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  keywords?: string[];
  canonical?: string;
}

const {
  title,
  description,
  image = '/og-image.jpg',
  type = 'website',
  publishedTime,
  modifiedTime,
  author = '探偵と夜の街',
  keywords = ['探偵', '夜の街', 'ホームページ'],
  canonical = Astro.url.href,
} = Astro.props;

const siteUrl = Astro.site?.href || 'https://example.com';
const fullImageUrl = image.startsWith('http') ? image : `${siteUrl}${image}`;

// 構造化データ
const schema = {
  '@context': 'https://schema.org',
  '@type': type === 'article' ? 'Article' : 'WebSite',
  name: title,
  description: description,
  url: canonical,
  ...(type === 'article' && publishedTime && {
    datePublished: publishedTime,
    dateModified: modifiedTime || publishedTime,
    author: {
      '@type': 'Person',
      name: author,
    },
  }),
  publisher: {
    '@type': 'Organization',
    name: '探偵と夜の街',
  },
};
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    {keywords.length > 0 && <meta name="keywords" content={keywords.join(', ')} />}
    <link rel="canonical" href={canonical} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageUrl} />
    <meta property="og:site_name" content="探偵と夜の街" />
    <meta property="og:locale" content="ja_JP" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonical} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullImageUrl} />

    <!-- 構造化データ -->
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />

    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Google Fonts: Kaisei Opti -->
    <link href="https://fonts.googleapis.com/css2?family=Kaisei+Opti:wght@400;500;700&display=swap" rel="stylesheet" />

    <!-- Custom Font CSS (for self-hosted fonts) -->
    <link rel="stylesheet" href="/fonts/kaisei-opti.css" />

    <slot name="head" />
  </head>
  <body class="font-sans overflow-x-hidden">
    <slot />
    <slot name="footer" />
  </body>
</html>

<style is:global>
  html, body {
    overflow-x: hidden;
    max-width: 100vw;
  }
</style>

